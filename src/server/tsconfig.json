{
    "compilerOptions": {
        "baseUrl":  ".",
        "rootDirs": [ "." ],
        "paths": {
            "@routes/*":   [ "routes/*"  ],
            "@models/*":   [ "models/*"  ],
            "@services/*": [ "services/*" ],
            "@configs/*":  [ "configs/*" ],
            "@app/*":      [ "./*"       ]
        },
        "outDir":                     "./../../build",
        "target":                     "esnext",
        "lib":                        [ "esnext" ],
        "module":                     "commonjs",
        "moduleResolution":           "node",
        "esModuleInterop":            true,
        "sourceMap":                  true,
        "declaration":                false,
        "declarationMap":             false,
        "experimentalDecorators":     true,
        "strict":                     true,
        "noUnusedLocals":             true,
        "noUnusedParameters":         true,
        "noImplicitAny":              true,
        "noImplicitThis":             true,
        "noImplicitReturns":          true,
        "noFallthroughCasesInSwitch": true
    },
    "files":   [ "index.ts" ],
    "include": [ "**/*" ],
}